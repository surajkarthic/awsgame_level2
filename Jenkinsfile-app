pipeline {
    agent any

    environment {
        AWS_REGION = "ap-south-1"
        ECR_REPO_NAME = "my-app-repo"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build and Push Docker Image') {
            // This stage remains the same
            steps {
                script {
                    def awsAccountId = sh(script: 'aws sts get-caller-identity --query Account --output text', returnStdout: true).trim()
                    def imageName = "${awsAccountId}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO_NAME}:${BUILD_NUMBER}"
                    
                    sh "docker build -t '${imageName}' ."
                    sh "aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${awsAccountId}.dkr.ecr.${AWS_REGION}.amazonaws.com"
                    sh "docker push '${imageName}'"
                    
                    env.IMAGE_TO_DEPLOY = imageName
                }
            }
        }

        stage('Deploy to EC2 via Sidecar') {
            steps {
                sh '''
                    echo "Executing deployment playbook on ansible-sidecar container..."
                    
                    # Use docker exec to run the command on the sidecar
                    # The workspace is shared, so it can see all the files.
                    docker exec ansible-sidecar ansible-playbook \
                      -i /var/jenkins_home/workspace/${JOB_NAME}/inventory/hosts \
                      /var/jenkins_home/workspace/${JOB_NAME}/playbooks/deploy-app.yml \
                      --extra-vars "image_to_deploy=${IMAGE_TO_DEPLOY}"
                '''
            }
        }
    }
}
